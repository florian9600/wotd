<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/achievement_image"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_weight="3"
        android:src="@drawable/ach_14"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_weight="8">
        <com.example.mateuszzaporowski.wotd.support.AutoResizeTextView
            android:id="@+id/achievement_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:ellipsize="none"
            android:gravity="center_vertical"
            android:textSize="26sp"
            android:textColor="@android:color/black"
            android:text="Sieben in Folge!"
            android:paddingStart="10dp"
            fontPath="fonts/Arial Bold.ttf"
            tools:ignore="MissingPrefix"/>
        <com.example.mateuszzaporowski.wotd.support.AutoResizeTextView
            android:id="@+id/achievement_description"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="none"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:text="Ununterbrochen enträtsel 7 Wörter des Tages."
            android:textColor="@android:color/black"
            android:paddingStart="10dp"
            fontPath="fonts/Arial.ttf"
            tools:ignore="MissingPrefix"/>
    </LinearLayout>

    <com.example.mateuszzaporowski.wotd.support.AutoResizeTextView
        android:id="@+id/achievement_date"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:ellipsize="none"
        android:textSize="60sp"
        android:gravity="center"
        android:textColor="#c9cccc"
        android:paddingEnd="10dp"
        android:layout_weight="3"
        fontPath="fonts/Arial.ttf"
        tools:ignore="MissingPrefix"/>

</LinearLayout>